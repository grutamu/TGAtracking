extends sidebar

block sysmain

	form(role='form', action="/admin/district/edit",method="post", style='max-width: 300px;')
		.form-group
			input.form-control(type='text', name="id", value='#{data.district_id}', readonly)
		.form-group
			input.form-control(type='text', name="name", value='#{data.district_name}')
		.form-group
			input.form-control(type='txt', name="address", value='#{data.district_address}')
		.form-group
			input.form-control(type='text', name="city", value='#{data.district_city}')
		.form-group
			input.form-control(type='text', name="state", value='#{data.district_state}')
		.form-group
			input.form-control(type='text', name="zip", value='#{data.district_zip}')
		.form-group
			label Is Active:
			select(form="form_id", name="active")
				option(value = "active") Active
				option(value = "inactive") Inactive
		button.btn.btn-default(type='submit') Submit
		a(href='/admin/district')
			button.btn.btn-primary(type="button") Cancel