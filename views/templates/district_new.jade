extends sidebar
block sysmain
	form(role='form', action="/admin/district/new",method="post", style='max-width: 300px;')
		.form-group
			input.form-control(type='text', name="name", placeholder='District Name')
		.form-group
			input.form-control(type='txt', name="address", placeholder='Address')
		.form-group
			input.form-control(type='text', name="city", placeholder='City')
		.form-group
			input.form-control(type='text', name="state", placeholder='State')
		.form-group
			input.form-control(type='text', name="zip", placeholder='Zipcode')
		.form-group
			label Is Active:
			select(form="form_id", name="active")
				option(value = "active") Active
				option(value = "inactive") Inactive
		button.btn.btn-default(type='submit') Submit
		a(href='/admin/district')
			button.btn.btn-primary(type="button") Cancel