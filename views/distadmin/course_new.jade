extends ../sidebar
block sysmain
	script.
		window.onload = function(){
			document.getElementById("distadminsidebar").className = "active";
		}
	p New Course Page!
	form(role='form', id="form_id", action="/distadmin/course/new",method="post", style='max-width: 300px;')
		.row
			label Course Name
			input(type=text, name="course_name", placeholder = "Course Name")
		.row
			label Course Number
			input(type=text, name="course_number", placeholder = "Course Number")
		.row
			label School 
			select(form="form_id", name="school")
				for school in schools
					option(value = '#{school._id}') #{school.school_name}
		.row
			label School Year
			select(form="form_id", name="school_year")
				option(value = "2014 - 2015") 2014 - 2015
				option(value = "2015 - 2016") 2015 - 2016
		.row
			label Teacher
			select(form="form_id", name="teacher")
				for teacher in teachers
					option(value = "#{teacher._id}") #{teacher.firstname} #{teacher.lastname}
		.row
			label Students
			select(form="form_id", name="students", multiple)
				for student in students
					option(value = "#{student._id}", id = "#{student._id}") #{student.firstname} #{student.lastname}


		button.btn.btn-default(type='submit') Submit
		a(href='/distadmin/course')
			button.btn.btn-primary(type="button") Cancel



	