extends ../sidebar
block sysmain
	script.
		window.onload = function(){
			document.getElementById("adminsidebar").className = "active";
		}
	form(id="form_id", role='form', action="/admin/district/new",method="post", style='max-width: 300px;')
		.form-group
			input.form-control(type='text', name="district_name", placeholder='District Name')
		.form-group
			input.form-control(type='txt', name="district_address", placeholder='Address')
		.form-group
			input.form-control(type='text', name="district_city", placeholder='City')
		.form-group
			input.form-control(type='text', name="district_state", placeholder='State')
		.form-group
			input.form-control(type='text', name="district_zip", placeholder='Zipcode')
		.form-group
			label Is Active:
			select(form="form_id", name="is_active")
				option(value = "active") Active
				option(value = "inactive") Inactive
		button.btn.btn-default(type='submit') Submit
		a(href='/admin/district')
			button.btn.btn-primary(type="button") Cancel